---
import type { Translations } from "../i18n/en";
import { Icon } from "astro-icon/components";

export interface Props {
    t: Translations;
}

const { t } = Astro.props;

const skillsData = [
    {
        category: t.skills.categories[0],
        color: "from-cyan-500/20 to-cyan-500/10",
        items: [
            { label: "Astro", name: "astro" },
            { label: "Preact/React", name: "react" },
            { label: "Spring", name: "spring" },
            { label: "OpenGL", name: "opengl" },
            { label: "Vulkan", name: "vulkan" },
            { label: "TailwindCSS", name: "tailwindcss" },
            { label: "Node.js", name: "nodejs" },
            { label: "Express", name: "express" },
            { label: "Angular", name: "angular" },
            { label: "Three.js", name: "threejs" },
            { label: "TensorFlow", name: "tensorflow" },
            { label: "Flask", name: "flask" },
            { label: "GraphQL", name: "graphql" },
        ],
    },
    {
        category: t.skills.categories[3],
        color: "from-amber-500/20 to-amber-500/10",
        items: [
            { label: "Git", name: "git" },
            { label: "Github", name: "github" },
            { label: "Docker", name: "docker" },
            { label: "VSCode", name: "vscode" },
            { label: "Notion", name: "notion" },
            { label: "Godot", name: "godot" },
            { label: "Linux", name: "linux" },
            { label: "AWS", name: "aws" },
            { label: "Unity", name: "unity" },
        ],
    },
    {
        category: t.skills.categories[4],
        color: "from-purple-500/20 to-purple-500/10",
        items: [
            { label: "JavaScript", name: "javascript" },
            { label: "Python", name: "python" },
            { label: "C++", name: "cpp" },
            { label: "C#", name: "csharp" },
            { label: "C", name: "c" },
            { label: "TypeScript", name: "typescript" },
            { label: "HTML5", name: "html" },
            { label: "CSS3", name: "css3" },
            { label: "Java", name: "java" },
            { label: "Bash", name: "bash" },
            { label: "Rust", name: "rust" },
        ],
    },
    {
        category: t.skills.categories[1],
        color: "from-lime-500/20 to-lime-500/10",
        items: [
            { label: "MongoDB", name: "mongodb" },
            { label: "PostgreSQL", name: "postgresql" },
            { label: "MySQL", name: "mysql" },
            { label: "SQLite", name: "sqlite" },
            { label: "Turso", name: "turso" },
            { label: "SQL Server", name: "microsoftsqlserver" },
        ],
    },
    {
        category: t.skills.categories[2],
        color: "from-pink-500/20 to-pink-500/10",
        items: [
            { label: "Figma", name: "figma" },
            { label: "Canva", name: "canva" },
            { label: "UI/UX Principles" },
        ],
    },
];
---

<section id="Skills" class="relative">
    <div class="max-w-6xl mx-auto text-center mb-12">
        <h2 class="text-4xl font-bold mb-3 tracking-tight">{t.skills.title}</h2>
        <p class="text-default/80 text-base max-w-2xl mx-auto">
            {t.skills.description}
        </p>
    </div>

    <div class="flex flex-wrap justify-center gap-6">
        {
            skillsData.map((group, i) => (
                <div
                    class={`group relative flex-1 min-w-72 rounded-2xl p-8 shadow-lg bg-linear-to-br ${group.color} border border-white/5 hover:-translate-y-3 hover:shadow-xl transition-all duration-300`}
                >
                    <h3 class="text-lg font-semibold mb-6 uppercase tracking-wide text-default">
                        {group.category}
                    </h3>

                    <div class="flex flex-wrap justify-center gap-4 ">
                        {group.items.map((skill, j) => (
                            <div
                                class={`hover:animate-wiggle flex flex-col flex-1 border border-white items-center justify-center gap-2 rounded-xl p-3 text-sm font-medium transform translate-y-5 scale-90 transition-all duration-500
            bg-linear-to-br ${group.color} 
            hover:scale-105 hover:text-white hover:shadow-lg`}
                            >
                                {skill.name && (
                                    <Icon name={skill.name} size={32} />
                                )}
                                <span class={``}>{skill.label}</span>
                            </div>
                        ))}
                    </div>
                </div>
            ))
        }
    </div>
</section>
