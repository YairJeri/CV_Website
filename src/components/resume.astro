---
import type { Translations } from "../i18n/en";
import type { Resume } from "../types/resume";
import ResumeComplete from "./resume_complete.astro";
import ResumePrev from "./resume_prev.astro";

export interface Props {
    t: Translations;
    lang: string;
    resume: Resume;
    isComplete: boolean;
}

const { t, resume, lang, isComplete } = Astro.props;
---

<section id="Resume" class="relative pdf-safe">
    <div
        class="gap-6 mb-10 p-8 bg-surface rounded-3xl shadow-lg shadow-[#00000040]"
    >
        {
            isComplete ? (
                <ResumeComplete resume={resume} />
            ) : (
                <ResumePrev resume={resume} />
            )
        }

        <div
            class="flex gap-4 flex-wrap justify-center sm:justify-start w-full"
        >
            <div class="relative group mx-auto">
                <span
                    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-32 h-full animate-ping rounded-xl bg-accent opacity-75"
                ></span>
                <a
                    href={`/files/CV_Yair Jeri_${lang}.pdf`}
                    download={`CV_Yair Jeri.pdf`}
                    id="downloadCV"
                    class="relative py-3.5 px-8 rounded-xl font-semibold duration-300 inline-flex items-center gap-2 border-2 border-transparent hover:border-accent bg-accent text-contrast hover:bg-neutral-800 hover:text-accent hover:-translate-y-0.5 hover:shadow-xl"
                >
                    Download CV
                </a>
            </div>
        </div>
    </div>
</section>

